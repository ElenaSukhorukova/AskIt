<%= simple_form_for model, method: method do |f| %>
  <%= f.input :body, placeholder: attribute_model(Answer.new, :body), 
      input_html: { class: 'mb-2' } %>
  <%= f.button :submit, f.object.new_record? ? t('submit.new') : 
      t('submit.edit'), class: "btn btn-primary mt-2" %>
  <%= render partial: 'shared/cancel_button', 
      locals: { path: question_path(f.object.question) } if f.object.persisted? %>	
<% end %>

 