<!DOCTYPE html>
<html data-lang="<%= I18n.locale %>">
  <head>
    <meta charset='utf-8'>
    <title><%= full_title(yield(:page_title)) %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload", media: 'all' %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>
  </head>

  <body data-lang="<%= I18n.locale %>">
    <div class='wrapper'>
      <%= yield :main_menu %>

      <main class='container mt-3 content'>
        <% flash.each do |type, msg| %>    
          <!-- Change flash messages of devise to bootstrap format -->
          <% case type %>
          <% when 'alert'%>
            <% type = 'danger' %>
          <% when 'notice' %>
            <% type = 'success' %>
          <% end %>

          <%= tag.div msg, class: "alert alert-#{type} text-center", role: 'alert' %>
        <% end %>
          <%= yield %>
      </main>
      <%= render 'layouts/footer' %>
    </div>
  </body>
</html>
