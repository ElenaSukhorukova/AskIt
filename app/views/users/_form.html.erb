<%= simple_form_for model, method: method do |f| %>
  <%= f.input :username, placeholder: attribute_model(f.object, :username), 
                        input_html: { class: 'mb-2' } %>
  <%= f.input :role, readonly: true,  placeholder: t(f.object.role, scope: 'global.user.roles') %>
  <%= f.input :email, placeholder: attribute_model(f.object, :email), 
                    input_html: { class: 'mb-2' } %>
  <% unless f.object.new_record? %>
    <%= f.input :old_password, placeholder: attribute_model(f.object, :old_password), 
                            input_html: { class: 'mb-2' } %>
  <% end %>
  <%= f.input :password, placeholder: attribute_model(f.object, :password), 
                    input_html: { class: 'mb-2' } %>
  <%= f.input :password_confirmation, placeholder: attribute_model(f.object, :password_confirmation), 
                     input_html: { class: 'mb-2' } %>

  <%= f.button :submit, f.object.new_record? ? t('submit.new') : t('submit.edit'), 
              class: "btn btn-primary mt-2" %> 
  <%= render partial: 'shared/cancel_button', 
      locals: { path: user_path(f.object) } if f.object.persisted? %>	
<% end %>
