<tr>
  <th scope='row'><%= user.id %></th>
  <td><%= user.username %></td>
  <td><%= user.email %></td>
  <td><%= user.role %></td>
  <td><%= user.formatted_created_at %></td>
  <td>
    <div class="btn-group" role="group">
      <%= link_to t('link.edit'), edit_admin_user_path(user), class: 'btn btn-secondary me-2 btn-sm' %>
      <%= button_to t('submit.destroy'), admin_user_path(user), 
          method: :delete, class: "btn btn-danger me-2 btn-sm", 
          :onclick => "return confirm('Are you sure?')", :remote => true %>
    </div>
  </td>
</tr>