<% provide :page_title, t('menu.admin_page') %>
<% currently_at t('menu.admin_page') %>

<h1 class='mb-4'><%= t('.title') %></h1>

<div class='btn-group mb-3'>
  <%= link_to t('link.zip'), admin_users_path(format: :zip), class: "btn btn-primary mt-2" %>
</div>

<table id='customers'>
  <thead>
    <tr>
      <th scope='col'>#</th>
      <th scope='col'><%= attribute_model(User.new, :username) %></th>
      <th scope='col'><%= attribute_model(User.new, :email) %></th>
      <th scope='col'><%= attribute_model(User.new, :role) %></th>
      <th scope='col'><%= attribute_model(User.new, :created_at) %></th>
      <th scope='col'></th>
    </tr>
  </thead>
  <tbody>
    <%= render @users %>
  </tbody>
</table>

<%== pagination @pagy %>

<h2 class='my-3'><%= t('.upload') %></h2>

<%= simple_form_for(:archive, url: admin_users_path) do |f| %>
  <%= f.input :archive, as: :file, required: true, input_html: {class: 'form-control'} %>
  <%= f.button :submit, t('submit.upload'), class: "btn btn-primary my-4"%>
<% end %>